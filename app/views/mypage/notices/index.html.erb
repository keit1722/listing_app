<% set_meta_tags title: '通知一覧' %>
<div id="titlebar">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="sl sl-icon-envelope-open"></i> 通知一覧</h2>
    </div>
  </div>
</div>

<div class="row">

  <!-- Listings -->
  <div class="col-lg-12 col-md-12">
    <div class="messages-container margin-top-0">
      <% if @notices.blank? %>
        <div class="messages-headline">
          <h4>通知はありません</h4>
        </div>
      <% elsif %>
        <div class="messages-inbox">
          <ul>
            <%= render @notices %>
          </ul>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate @notices %>
    </div>
    <!-- Pagination / End -->

  </div>
