  <!-- Slider -->
  <div class="listing-slider mfp-gallery-container margin-bottom-0">
    <%= link_to url_for(@photo_spot.main_image), class: "item mfp-gallery", data: { background_image: url_for(@photo_spot.main_image) } do %><% end %>
    <% if @photo_spot.images.attached? %>
      <%= render partial: "listings/image", collection: @photo_spot.images %>
    <% end %>
  </div>

  <!-- Content -->
  <div class="container">
    <div class="row sticky-wrapper">
      <div class="col-lg-8 col-md-8 padding-right-30">

        <!-- Titlebar -->
        <div id="titlebar" class="listing-titlebar">
          <div class="listing-titlebar-title">
            <h2>
              <%= @photo_spot.name %> 
            </h2>
            <span>
              <a href="#listing-location" class="listing-address">
                <i class="fa fa-map-marker"></i>
                <%= @photo_spot.address %>
              </a>
            </span>
          </div>
        </div>

         <!-- Listing Nav -->
        <div id="listing-nav" class="listing-nav-container">
          <ul class="listing-nav">
            <li><a href="#listing-overview" class="active">概要</a></li>
            <li><a href="#listing-location">地図</a></li>
            <% if @three_posts.present? %>
              <li><a href="#listing-reviews">投稿</a></li>
            <% end %>
          </ul>
        </div>

        <!-- Description -->
        <%= render "listings/show_description", { listing: @photo_spot } %>

        <!-- Location -->
        <%= render "listings/show_location", { listing: @photo_spot } %>

        <!-- Post -->
        <% if @three_posts.present? %>
          <%= render "listings/show_post", { listing: @photo_spot, three_posts: @three_posts } %>
        <% end %>

      </div>

      <!-- Sidebar -->
      <div class="col-lg-4 col-md-4 margin-top-75 sticky">

        <!-- Bookmark -->
        <% if current_user %>
          <%= render "listings/show_bookmark", { listing: @photo_spot } %>
        <% end %>

      </div>
      <!-- Sidebar / End -->

    </div>
  </div>
