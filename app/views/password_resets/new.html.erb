<!-- Wrapper -->
<div id="wrapper">

  <!-- Header Container -->
  <header id="header-container">
    <div id="header">
      <div class="container">
        <%= render 'shared/header' %>
      <div>
    <div>
  </header>
  <div class="clearfix"></div>
  <!-- Header Container / End -->

  <!-- Titlebar -->
  <div id="titlebar" class="gradient">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/breadcrumbs', { icon_name: "check", page_name: "パスワードリセット" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Container -->
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div id="add-listing" class="separated-form">

            <!-- Section -->
            <div class="add-listing-section">
              <%= form_tag password_resets_path, method: :post do %>

                <!-- Headline -->
                <div class="add-listing-headline"></div>

                <!-- Row -->
                <div class="row with-forms margin-bottom-20">
                  <div class="col-md-12">
                    <p>登録メールアドレスを入力後に送信ボタンを押してください。<br>
                    その後メールアドレス宛に届くメールをご確認ください。</p>
                    <h5><%= label_tag :email %></h5>
                    <%= email_field_tag :email %>
                  </div>
                </div>
                <!-- Row / End -->

                <%= submit_tag "送信", class: "button" %>
              <% end %>
            </div>
            <!-- Section / End -->

        </div>
      </div>
    </div>

  </div>
  <!-- Container / End -->

  <!-- Footer -->
  <div id="footer" class="margin-top-60">
    <%= render 'shared/footer' %>
  </div>
  <!-- Footer / End -->

  <!-- Back To Top Button -->
  <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->
