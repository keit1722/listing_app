<!-- Wrapper -->
<div id="wrapper">

  <!-- Header Container -->
  <header id="header-container">
    <!-- Header -->
    <div id="header">
      <div class="container">
        <%= render 'shared/header' %>
      <div>
    <div>
    <!-- Header / End -->
  </header>
  <div class="clearfix"></div>
  <!-- Header Container / End -->

  <!-- Titlebar -->
  <div id="titlebar" class="gradient">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2><i class="sl sl-icon-plus"></i> パスワード再設定</h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Container -->
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <div id="add-listing" class="separated-form">

          <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
            <%= render 'shared/error_messages', model: f.object %>
            <%= render 'shared/flash_messages' %>

            <!-- Section -->
            <div class="add-listing-section">

              <!-- Headline -->
              <div class="add-listing-headline"></div>

              <!-- Row -->
              <div class="row with-forms margin-bottom-20">
                <!-- Email -->
                <div class="col-md-12">
                  <h5><%= f.label :email %></h5>
                  <p>※ 変更できません</p>
                  <%= f.email_field :email, disabled: true %>
                </div>
              </div>
              <!-- Row / End -->

              <!-- Row -->
              <div class="row with-forms">
                <!-- Password -->
                <div class="col-md-6">
                  <h5><%= f.label :password %></h5>
                  <p>6文字以上でパスワードを決めてください。</p>
                  <%= f.password_field :password %>
                </div>

                <!-- Password confirmation -->
                <div class="col-md-6">
                  <h5><%= f.label :password_confirmation %></h5>
                  <p>パスワードを再度入力してください。</p>
                  <%= f.password_field :password_confirmation %>
                </div>
              </div>
              <!-- Row / End -->

            <%= f.submit class: 'btn btn-primary' %>
            </div>
            <!-- Section / End -->

          <% end %>

        </div>
      </div>
    </div>

  </div>
  <!-- Container / End -->

  <!-- Footer -->
  <div id="footer" class="margin-top-60">
    <%= render 'shared/footer' %>
  </div>
  <!-- Footer / End -->

  <!-- Back To Top Button -->
  <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->
