<li>
  <%= link_to pvsuwimvsuoitmucvyku_user_path(user) do %>
    <div class="message-avatar"><%= image_tag 'blank-profile-picture.png' %></div>

    <div class="message-by">
      <div class="message-by-headline">
        <h5>
          <%= user.decorate.full_name %>（<%= user.username %>） 
            <i class="
              <%= if user.general?
                "bgc-blue"
              elsif user.business?
                "bgc-green"
              elsif user.admin?
                "bgc-red"
              end %>
            "><%= user.role_i18n %></i>
        </h5>
      </div>
      <p><%= user.email %></p>
    </div>
  <% end %>
</li>
