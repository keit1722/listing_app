<% set_meta_tags title: 'お知らせ一覧' %>
<div id="titlebar" class="margin-bottom-20">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="sl sl-icon-list"></i> お知らせ一覧</h2>
    </div>
  </div>
</div>

<div class="margin-bottom-20 display-flex-end">
  <%= link_to new_pvsuwimvsuoitmucvyku_announcement_path, class: "button border" do %>
    <i class="sl sl-icon-plus"></i> 新規作成
  <% end %>
</div>

<div class="row">
  <!-- Listings -->
  <div class="col-lg-12 col-md-12">

    <div class="messages-container margin-top-0">
      <% if @announcements.blank? %>
        <div class="messages-headline">
          <h4>お知らせはありません</h4>
        </div>
      <% elsif %>
        <div class="messages-inbox">
          <ul>
            <%= render partial: @announcements %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate @announcements %>
    </div>

  </div>
