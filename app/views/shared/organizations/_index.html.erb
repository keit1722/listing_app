<div id="titlebar">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="sl sl-icon-globe"></i> <%= page_name %></h2>
    </div>
  </div>
</div>

<div class="row">
  <!-- Listings -->
  <div class="col-lg-12 col-md-12">
    <div class="messages-container margin-top-0">
      <% if organizations.blank? %>
        <div class="messages-headline">
          <h4><%= no_organizations_text %></h4>
        </div>
      <% elsif %>
        <div class="messages-inbox">
          <ul>
            <%= render partial: 'shared/organizations/organization', collection: organizations, locals: { show_path: show_path } %>
          </ul>
        </div>
      <% end %>
    </div>
    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate organizations %>
    </div>
  </div>
