<div id="titlebar" class="margin-bottom-20">
  <div class="row">
    <div class="col-md-12">
      <%= render 'shared/breadcrumbs_mypage', { icon_name: "list", page_name: "#{page}一覧" } %>
    </div>
  </div>
</div>

<div class="margin-bottom-20 display-flex-space-between">
  <%= link_to send(organization_show_path, organization), class: "button border" do %>
    <i class="sl sl-icon-arrow-left-circle"></i> 戻る
  <% end %>

  <% if !new_path.nil? %>
    <%= link_to send(new_path), class: "button border" do %>
      <i class="sl sl-icon-plus"></i> 新規作成
    <% end %>
  <% end %>
</div>

<div class="row">
  <!-- Listings -->
  <div class="col-lg-12 col-md-12">
    <div class="dashboard-list-box margin-top-0">
      <% if listings.blank? %>
        <h4><%= "登録されている#{page}はありません" %></h4>
      <% elsif %>
        <ul>
          <%= render partial: 'shared/organizations/listings/listing', collection: listings, as: 'listing', locals: {show_path: show_path, edit_path: edit_path} %>
        </ul>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate listings %>
    </div>
  </div>
