<div id="titlebar" class="margin-bottom-20">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="sl sl-icon-doc"></i> フォトスポット詳細</h2>
    </div>
  </div>
</div>

<div class="margin-bottom-20 display-flex-end">
  <%= link_to send(post_index_path, photo_spot.organization, photo_spot), class: "button border" do %>
    <i class="sl sl-icon-list"></i> 投稿一覧
  <% end %>
</div>

<div class="row">
  <!-- Profile -->
  <div class="col-md-12">
    <div class="dashboard-list-box margin-top-0">
      <div class="dashboard-list-box-static">
        <!-- table -->
        <table class="basic-table">
          <tbody>
            <tr>
              <td data-label="項目"><%= PhotoSpot.human_attribute_name("name") %></td>
              <td data-label="内容"><%= photo_spot.name %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= PhotoSpot.human_attribute_name("address") %></td>
              <td data-label="内容"><%= photo_spot.address %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= District.model_name.human %></td>
              <td data-label="内容"><%= photo_spot.districts.first.name %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= PhotoSpot.human_attribute_name("description") %></td>
              <td data-label="内容"><%= photo_spot.decorate.format_description %></td>
            </tr>
          </tbody>
        </table>
        <!-- table end -->

        <!-- Row -->
        <div class="row with-forms margin-bottom-20">
          <!-- Map -->
          <div class="col-md-12">
            <div id="map-location-display" class="margin-top-25 margin-bottom-25" data-lat="<%= photo_spot.lat %>" data-lng="<%= photo_spot.lng %>"></div>
          </div>
        </div>
        <!-- Row / End -->

        <!-- Row -->
        <% if photo_spot.images.attached? %>
          <div class="row with-forms margin-bottom-20">
            <!-- Images preview -->
            <div class="col-md-12">
              <div id="preview">
                <% photo_spot.images.each do |image| %>
                  <%= image_tag image.variant(resize: '300x200').processed %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Row / End -->
      </div>
    </div>

    <div class="margin-top-40">
      <%= link_to send(index_path), class: "button border margin-bottom-20 overflow-visible" do %>
        <i class="sl sl-icon-arrow-left-circle"></i> 戻る
      <% end %>

      <%= link_to send(edit_path), class: "button overflow-visible" do %>
        <i class="sl sl-icon-pencil"></i> 編集
      <% end %>
      <%= link_to send(destroy_path), method: :delete, data: { confirm: "削除すると復旧はできません。よろしいですか？" }, class: "border button right-side width-auto overflow-visible" do %>
        <i class="sl sl-icon-trash"></i> 削除
      <% end %>
    </div>
  </div>
