<div id="titlebar" class="margin-bottom-20">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="sl sl-icon-doc"></i> 宿泊施設詳細</h2>
    </div>
  </div>
</div>

<div class="margin-bottom-20 display-flex-end">
  <%= link_to send(post_index_path, hotel.organization, hotel), class: "button border" do %>
    <i class="sl sl-icon-list"></i> 投稿一覧
  <% end %>
</div>

<div class="row">
  <!-- Profile -->
  <div class="col-md-12">
    <div class="dashboard-list-box margin-top-0">
      <div class="dashboard-list-box-static">
        <!-- table -->
        <table class="basic-table">
          <tbody>
            <tr>
              <td data-label="項目"><%= Hotel.human_attribute_name("name") %></td>
              <td data-label="内容"><%= hotel.name %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= Hotel.human_attribute_name("address") %></td>
              <td data-label="内容"><%= hotel.address %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= District.model_name.human %></td>
              <td data-label="内容"><%= hotel.districts.first.name %></td>
            </tr>
            <tr>
              <td data-label="項目"><%= Hotel.human_attribute_name("description") %></td>
              <td data-label="内容"><%= hotel.decorate.format_description %></td>
            </tr>
            <% if hotel.reservation_link.present? %>
              <tr>
                <td data-label="項目"><%= ReservationLink.human_attribute_name("link") %></td>
                <td data-label="内容"><%= link_to nil, hotel.reservation_link.link %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- table end -->

        <!-- Row -->
        <div class="row with-forms margin-bottom-20">
          <!-- Map -->
          <div class="col-md-12">
            <div id="map-location-display" class="margin-top-25 margin-bottom-25" data-lat="<%= hotel.lat %>" data-lng="<%= hotel.lng %>"></div>
          </div>
        </div>
        <!-- Row / End -->

        <!-- Row -->
          <div class="row margin-bottom-20">
            <!-- Images preview -->
            <div class="col-md-12">
              <div id="preview" class="images-preview">
                <%= image_tag hotel.main_image.variant(resize: '600x400').processed, class: "image-preview" %>
                <% if hotel.images.attached? %>
                  <% hotel.images.each do |image| %>
                    <%= image_tag image.variant(resize: '600x400').processed, class: "image-preview" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <!-- Row / End -->
      </div>
    </div>

    <div class="margin-top-40">
      <%= link_to send(index_path), class: "button border margin-bottom-20 overflow-visible" do %>
        <i class="sl sl-icon-arrow-left-circle"></i> 戻る
      <% end %>

      <%= link_to send(edit_path), class: "button overflow-visible" do %>
        <i class="sl sl-icon-pencil"></i> 編集
      <% end %>
      <%= link_to send(destroy_path), method: :delete, data: { confirm: "削除すると復旧はできません。よろしいですか？" }, class: "border button right-side width-auto overflow-visible" do %>
        <i class="sl sl-icon-trash"></i> 削除
      <% end %>
    </div>
  </div>
