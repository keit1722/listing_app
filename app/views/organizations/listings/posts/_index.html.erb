<div id="titlebar">
  <div class="row">
    <div class="col-md-12">
      <%= render 'shared/breadcrumbs_mypage', { icon_name: "list", page_name: "投稿一覧" } %>
    </div>
  </div>
</div>

<div class="row">

  <!-- Listings -->
  <div class="col-lg-12 col-md-12">

    <div class="messages-container margin-top-0">
      <% if posts.size == 0 %>
        <div class="messages-headline">
          <h4>投稿はありません</h4>
        </div>
      <% elsif %>
        <div class="messages-inbox">
          <ul>
            <%= render partial: 'organizations/listings/posts/post', collection: posts %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="clearfix"></div>
    <div class="pagination-container margin-top-30 margin-bottom-0">
      <%= paginate posts %>
    </div>

  </div>
