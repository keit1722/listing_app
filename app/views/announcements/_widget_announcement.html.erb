 <li>
  <div class="widget-content">
    <% if announcement.image.attached? %>
      <div class="widget-thumb">
        <%= link_to image_tag(announcement.image), announcement_path(announcement) %>
      </div>
    <% end %>
    <div class="widget-text">
      <h5>
        <%= link_to announcement.title, announcement_path(announcement) %>
      </h5>
      <span><%= l announcement.created_at, format: :short %></span>
    </div>
    <div class="clearfix"></div>
  </div>
</li>