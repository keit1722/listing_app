<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head_tag' %>
  </head>

  <body>

    <!-- Wrapper -->
    <div id="wrapper">

      <!-- Header Container -->
      <header id="header-container" class="fixed fullwidth dashboard">
        <!-- Header -->
        <div id="header" class="not-sticky">
          <div class="container">
            <%= render 'shared/header_mypage' %>
          </div>
        </div>
        <!-- Header / End -->

      </header>
      <div class="clearfix"></div>
      <!-- Header Container / End -->

      <!-- Dashboard -->
      <div id="dashboard">
        <%= render 'shared/mypage_navigation' %>
        <!-- Content -->
        <div class="dashboard-content">
          <%= render 'shared/flash_messages_closable' %>
          <%= yield %>
            <!-- Copyrights -->
            <%= render 'shared/copyright' %>
          </div>
        </div>
        <!-- Content / End -->
      </div>
      <!-- Dashboard / End -->

    </div>
    <!-- Wrapper / End -->

    <%= javascript_include_tag 'application' %>
  </body>
</html>