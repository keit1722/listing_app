<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head_tag' %>
  </head>

  <body>

    <!-- Wrapper -->
    <div id="wrapper">

      <!-- Header Container -->
      <header id="header-container">
        <!-- Header -->
        <div id="header" class="not-sticky">
          <div class="container">
            <%= render 'shared/header' %>
          </div>
        </div>
        <!-- Header / End -->
      </header>

      <div class="clearfix"></div>
      <!-- Header Container / End -->

      <%= yield %>

      <!-- Footer -->
      <div id="footer" class="sticky-footer">
        <%= render 'shared/footer' %>
      </div>
      <!-- Footer / End -->

      <!-- Back To Top Button -->
      <div id="backtotop"><a href="#"></a></div>

    </div>
    <!-- Wrapper / End -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'maps-location' %>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials[:google_maps][:api_key] %>&callback=initMap&v=weekly" async></script>
  </body>
</html>