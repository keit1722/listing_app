  t.integer 'status', default: 1, null: false
  t.datetime 'updated_at', precision: 6, null: false
  t.datetime 'created_at', precision: 6, null: false
end

create_table 'notices', force: :cascade do |t|
  t.references 'user', foreign_key: true
